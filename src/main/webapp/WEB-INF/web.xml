<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>Qubi</servlet-name>
        <servlet-class>com.hhuc.wechat.x.Service.Qubi</servlet-class>
        <init-param>
            <param-name>log4j</param-name>
            <param-value>com/hhuc/wechat/x/conf/log4j.properties</param-value><!--log4j配置文件路径-->
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Qubi</servlet-name>
        <url-pattern>/Service/Qubi</url-pattern>

    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.hhuc.wechat.x.Service.LoginWx</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Service/Login_wx</url-pattern>
    </servlet-mapping>
    <servlet>
    <servlet-name>ModifyPersonalData</servlet-name>
    <servlet-class>com.hhuc.wechat.x.Service.ModifyPersonalData</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>ModifyPersonalData</servlet-name>
        <url-pattern>/Service/ModifyPersonalData</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddUser</servlet-name>
        <servlet-class>com.hhuc.wechat.x.Service.AddUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddUser</servlet-name>
        <url-pattern>/Service/AddUser</url-pattern>
    </servlet-mapping>
</web-app>
